def count_words(string)
    myhash = {}
    string.downcase.scan(/\b[\w]+/).each do |word|
        if !myhash[word] then
	    myhash[word] = 1
	else myhash[word] += 1
	end
    end
    myhash
end



puts count_words("hello I am happy happy")

